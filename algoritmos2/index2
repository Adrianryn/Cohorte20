/*los operadores logicos permiten hacer estructuras de control mas grandes
and(&&), or(||), not(!)*/

function conjunciones() {
    let valor1 = false;
    let valor2 = false;
    if (valor1 && valor2) {
        console.log("elvalor 1 y el valor 2 son verdaderos");
        } else {
            console.log("un valor es falso");
        }
    }

    conjunciones();

    function disjunction1() {
        let valor1 = false;
        let valor2 = true; 
        if(valor1 || valor2){
            console.log("El operador or es verdadero");
        }else {
            console.log("el operador or es falso");
        }
        
    }
    disjunction1();

    function negacion() {
        let valor1 = true;
        if (!(!valor1 )){
            console.log("el valor es " + valor1);
        }else{
            console.log("el valor negado es " + valor1);
        }

    }
    negacion();